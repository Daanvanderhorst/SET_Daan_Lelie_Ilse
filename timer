    # --- Timer bijwerken ---
    remaining_time = draw_timer(screen, start_time, TIMER_DURATION)
    if remaining_time <= 0:
        print("De tijd is om!")
        spel_is_afgelopen = True

    def draw_timer(screen, start_time, duration):
    elapsed_time = pygame.time.get_ticks() - start_time
    remaining_time = max(0, (duration - elapsed_time) // 1000)  # Resterende tijd in seconden
    font = pygame.font.Font(None, 36)  # Klein lettertype voor de timer
    timer_text = font.render(f"Timer: {remaining_time}s", True, "white")  # Witte tekst
    screen.blit(timer_text, (10, 10))  # Timer linksboven plaatsen
    return remaining_time  # Teruggeven voor verdere logica

TIMER_DURATION = 30 * 1000  # 30 seconden in milliseconden
start_time = pygame.time.get_ticks()  # Starttijd van de timer
